<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <%= form_with(url: workspaces_path, scope: :session, local: true) do |f| %>
    <h1>Create new workspace</h1>
      <%= render 'shared/error_msg_workspace', object: @workspace %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Create new workspace", class: "btn btn-primary mt-3"%>
    <% end %>
  </div>
</div>