<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit comment</h1>

    <%= form_with model: @post, local: true do |f| %>
    <%= f.label :title_name %>
    <%= f.text_field :title_name, class: 'form-control' %>

    <%= f.label :parent_content %>
    <%= f.text_area :parent_content, class: 'form-control' %>

    <%= f.submit "Save changes", class: "btn btn-primary mt-3" %>
    <% end %>

  </div>
</div>
